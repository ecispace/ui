{{#accordion-list-item
    classNames="mt-30"
    expand=expand
    expandAll=expandAll
    expandOnInit=false
    expanded=expanded
    title=(t "istio.serviceMetrics.title")
    detail=(t "istio.serviceMetrics.detail")
}}
  {{#if expanded}}
    <section>
      {{metrics-action
        queryAction=(action "query")
        allowDetail=false
        state=state
      }}
      {{metrics-graph
        graphs=graphs
        loading=state.loading
        noGraphs=state.noGraphs
      }}
    </section>
  {{/if}}
{{/accordion-list-item}}